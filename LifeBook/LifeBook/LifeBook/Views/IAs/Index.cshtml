@model IEnumerable<LifeBook.Data.Entities.IA>

@{
    ViewData["Title"] = "Index";
}

<!-- Encabezado principal con estilo elegante -->
<h1 class="hacker-title">Resumen de IA</h1>

<!-- Botón para crear un nuevo elemento -->
<p>
    <!-- Utilizar el valor de categoryId desde ViewBag -->
    <a asp-action="Create" asp-route-categoryId="@ViewBag.CategoryId" class="btn btn-hacker">Crear Nuevo</a>
    <a asp-controller="IACategories" asp-action="Index" class="btn btn-hacker btn-small">Regresar</a>
</p>



<!-- Tabla con estilo hacker -->
<table class="table table-hacker">
    <thead>
        <tr>
            <th>Nombre de la IA</th>
            <th>Categoría</th>
            <th>Descripción</th>
            <th>URL</th> <!-- Nueva columna para la URL -->
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <!-- Mostrar la categoría de la IA -->
                    @Html.DisplayFor(modelItem => item.IACategory.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <!-- Agregar la columna URL -->
                    @if (!string.IsNullOrEmpty(item.Url))
                    {
                        <a href="@item.Url" target="_blank" class="action-link">URL</a>
                    }
                    else
                    {
                        <span>No disponible</span> <!-- Mensaje si no hay URL -->
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-action">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-action">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-route-categoryId="@item.CategoryId" class="btn btn-action">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Estilos personalizados para la temática hacker -->
<style>
    body {
        background-color: #0a0a0a;
        color: #00ff00;
        font-family: 'Courier New', Courier, monospace;
    }

    .hacker-title {
        font-size: 2.5em;
        color: #00ff00;
        text-align: left;
        margin-bottom: 20px;
        text-shadow: 0px 0px 10px #00ff00;
    }

    .btn-hacker {
        background-color: #111111;
        color: #00ff00;
        border: 1px solid #00ff00;
        padding: 10px 20px;
        text-transform: uppercase;
        text-decoration: none;
    }

        .btn-hacker:hover {
            background-color: #00ff00;
            color: #111111;
        }

    /* Estilo para los botones de acción (editar, detalles, eliminar) */
    .btn-action {
        background-color: #111111;
        color: #00ff00;
        border: 1px solid #00ff00;
        padding: 5px 10px;
        text-decoration: none;
        display: inline-block;
        margin-right: 5px;
    }

        .btn-action:hover {
            background-color: #00ff00;
            color: #111111;
        }

    .table-hacker {
        width: 100%;
        background-color: rgba(17, 17, 17, 0.7); /* Fondo negro con transparencia */
        color: #00ff00;
        border: 1px solid #00ff00;
        margin-top: 20px;
    }

        .table-hacker th, .table-hacker td {
            background-color: rgba(17, 17, 17, 0.6); /* Transparencia en las celdas */
            padding: 15px;
            text-align: left;
        }

        .table-hacker thead {
            background-color: rgba(28, 28, 28, 0.8); /* Transparencia en el encabezado */
        }

    .action-link {
        color: #00ff00;
        text-decoration: none;
    }

        .action-link:hover {
            text-decoration: underline;
            color: #00ff00;
        }
</style>
