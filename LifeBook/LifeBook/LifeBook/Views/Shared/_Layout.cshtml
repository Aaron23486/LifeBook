<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LifeBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LifeBook.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LifeBook</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 navbar-links">
                        <!-- Agregada la clase navbar-links -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link hacker-link" asp-area="" asp-controller="Sos" asp-action="Index">SO</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link hacker-link" asp-area="" asp-controller="Protocols" asp-action="Index">PROTOCOL</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link hacker-link" asp-area="" asp-controller="IACategories" asp-action="Index">IA</a>
                            </li>
                        }
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="nav-link hacker-link">@User.Identity.Name</span>
                                <span class="text-green mx-2">-</span> <!-- El separador en verde -->
                                <a id="logout-link" class="nav-link hacker-link" href="#">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link hacker-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Modal para la confirmación del logout -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content hacker-modal">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirmar Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro que deseas cerrar sesión?
                </div>
                <div class="modal-footer">
                    <a id="confirmLogout" class="btn btn-hacker btn-small">Cerrar Sesión</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Script para el manejo del logout con confirmación -->
    <script>
        document.getElementById('logout-link').addEventListener('click', function (event) {
            event.preventDefault();
            var logoutModal = new bootstrap.Modal(document.getElementById('logoutModal'));
            logoutModal.show();
        });

        document.getElementById('confirmLogout').addEventListener('click', function () {
            window.location.href = '@Url.Action("Logout", "Account")';
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Estilos para el modal con temática hacker -->
    <style>
        .hacker-modal {
            background-color: #111;
            color: #00ff00;
            font-family: 'Courier New', Courier, monospace;
        }

            .hacker-modal .modal-header, .hacker-modal .modal-footer {
                border: none;
            }

            .hacker-modal .modal-title {
                text-shadow: 0px 0px 10px #00ff00;
            }

            .hacker-modal .btn-hacker {
                background-color: #111111;
                color: #00ff00;
                border: 1px solid #00ff00;
            }

                .hacker-modal .btn-hacker:hover {
                    background-color: #00ff00;
                    color: #111111;
                }

        /* Estilos para la barra de navegación */
        .nav-link {
            transition: all 0.3s ease;
            position: relative;
        }

            .nav-link:hover {
                transform: translateY(-5px);
            }

            .nav-link.selected {
                transform: scale(1.2);
                font-weight: bold;
                color: #00ff00;
            }

        /* Línea debajo del enlace seleccionado solo en la clase .navbar-links */
        .navbar-links .nav-link.selected::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background-color: #00ff00; /* El color de la línea */
        }
    </style>

    <script>
        // Almacenamos la selección en el localStorage
        const navLinks = document.querySelectorAll('.navbar-links .nav-link');

        navLinks.forEach(link => {
            link.addEventListener('click', function () {
                // Eliminar la clase 'selected' de todos los enlaces
                navLinks.forEach(link => link.classList.remove('selected'));
                // Agregar la clase 'selected' solo al enlace actual
                this.classList.add('selected');
                // Guardar la selección en el localStorage
                localStorage.setItem('selectedNavLink', this.textContent);
            });
        });

        // Recuperamos la selección almacenada del localStorage y la aplicamos
        document.addEventListener('DOMContentLoaded', () => {
            const selectedLinkText = localStorage.getItem('selectedNavLink');
            if (selectedLinkText) {
                navLinks.forEach(link => {
                    if (link.textContent === selectedLinkText) {
                        link.classList.add('selected');
                    }
                });
            }
        });

        // Borrar la selección del localStorage cuando se navega a Home o se cierra sesión
        document.querySelector('.navbar-brand').addEventListener('click', function () {
            localStorage.removeItem('selectedNavLink');
        });

        // Borrar la selección del localStorage al hacer logout
        document.getElementById('logout-link').addEventListener('click', function () {
            localStorage.removeItem('selectedNavLink');
        });
    </script>
</body>
</html>
