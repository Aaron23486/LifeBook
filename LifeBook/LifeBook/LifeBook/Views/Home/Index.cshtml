@{
    ViewData["Title"] = "Home Page";
}

<div class="home-title-container">
    <h1 class="home-title">LifeBook</h1>
</div>

<!-- Estilos personalizados -->
<style>
    body {
        background-color: #0a0a0a; /* Fondo oscuro */
        color: #00ff00; /* Texto verde */
        font-family: 'Courier New', Courier, monospace; /* Estilo de fuente */
    }

    .home-title-container {
        position: fixed; /* Fija la posición en la pantalla */
        top: 50%; /* Centra verticalmente */
        left: 50%; /* Centra horizontalmente */
        transform: translate(-50%, -50%); /* Ajusta para centrar completamente */
        z-index: 10; /* Asegura que esté por encima de otros elementos */
    }

    .home-title {
        font-size: 6em; /* Tamaño grande para el texto */
        color: #00ff00; /* Color verde */
        text-shadow: 0px 0px 10px #00ff00; /* Sombra de texto verde */
        text-align: center;
    }
</style>
