@model IEnumerable<LifeBook.Data.Entities.IACategory>

@{
    ViewData["Title"] = "Index";
}

<!-- Encabezado principal con estilo -->
<h1 class="hacker-title">Categorías de IA</h1>

<!-- Botón para crear una nueva categoría -->
<p>
    <a asp-action="Create" class="btn btn-hacker">Crear Nuevo</a>
</p>

<!-- Tabla de categorías con estilo personalizado -->
<table class="table table-hacker">
    <thead>
        <tr>
            <th>Nombre de la Categoría</th>
            <th>Descripción</th>
            <th>Cantidad de IAs</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <!-- Enlace que muestra la cantidad de IAs o 0, y mantiene la URL para filtrar las IAs por categoría -->
                    <a asp-controller="IAs" asp-action="Index" asp-route-categoryId="@item.Id" class="action-link">
                        @if (item.IACount > 0)
                        {
                            @item.IACount
                        }
                        else
                        {
                            @:0
                        }
                    </a>
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-action">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-action">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-action">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Estilos personalizados para la vista -->
<style>
    body {
        background-color: #0a0a0a;
        color: #00ff00;
        font-family: 'Courier New', Courier, monospace;
    }

    .hacker-title {
        font-size: 2.5em;
        color: #00ff00;
        text-align: left;
        margin-bottom: 20px;
        text-shadow: 0px 0px 10px #00ff00;
    }

    .btn-hacker {
        background-color: #111111;
        color: #00ff00;
        border: 1px solid #00ff00;
        padding: 10px 20px;
        text-transform: uppercase;
        text-decoration: none;
    }

    .btn-hacker:hover {
        background-color: #00ff00;
        color: #111111;
    }

    .btn-action {
        background-color: #111111;
        color: #00ff00;
        border: 1px solid #00ff00;
        padding: 5px 10px;
        text-decoration: none;
        display: inline-block;
        margin-right: 5px;
    }

    .btn-action:hover {
        background-color: #00ff00;
        color: #111111;
    }

    .table-hacker {
        width: 100%;
        background-color: rgba(17, 17, 17, 0.7);
        color: #00ff00;
        border: 1px solid #00ff00;
        margin-top: 20px;
    }

    .table-hacker th, .table-hacker td {
        background-color: rgba(17, 17, 17, 0.6);
        padding: 15px;
        text-align: left;
    }

    .table-hacker thead {
        background-color: rgba(28, 28, 28, 0.8);
    }

    .action-link {
        color: #00ff00;
        text-decoration: none;
    }

    .action-link:hover {
        text-decoration: underline;
        color: #00ff00;
    }
</style>
